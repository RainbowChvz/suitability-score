<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.SuitabilityScore.TextView.Title" parent="Widget.AppCompat.TextView">
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="Widget.SuitabilityScore.TextView.DriverName" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="Widget.SuitabilityScore.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:tint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="LoadingView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:contentDescription">@string/desc_loading</item>
        <item name="android:src">@drawable/ic_loading</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>
</resources>